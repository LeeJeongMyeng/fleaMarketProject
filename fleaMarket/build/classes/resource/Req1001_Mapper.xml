<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
    <mapper namespace="fleaMarket.a03_dao.Req1001_Dao">
    	<!-- 회원조회 -->
    	<select id="MemberList" resultType="Member"
		parameterType="String">
		select *
		from FLEAMARKETMEMBER
		where (name || email || nickname) like '%'||#{name}||'%'
		<choose>
			<when test="authority=='전체'">
				and authority !='관리자'
			</when>
			<otherwise>
				and authority = #{authority}
			</otherwise>
		</choose>
		</select>
		<!-- 회원정보 수정! -->
		<update id="UpdateMemberInfo" parameterType="member">
			UPDATE FLEAMARKETMEMBER
			SET NICKNAME = #{nickname},
			PHONENUMBER = #{phonenumber},
			ADDRESS = #{address},
			category = #{category}
			where email = #{email}    
		</update>
		<!-- 회원정보(이미지) 수정 -->
		<update id="UpdateProfile" parameterType="profileimg">
			UPDATE PROFILE
			SET PROFILEIMG = #{profileimg}
			WHERE EMAIL = #{email}
		</update>
		<!-- 비번수정! -->
		<update id="UpdatePassword" parameterType="member">
			UPDATE FLEAMARKETMEMBER
			SET PASSWORD = #{password}
			WHERE EMAIL=#{email}
		</update>
		<!-- 회원정보 뽑아오기 여러가지 용도로 사용됨!! -->
		<select id="Login" parameterType="string" resultType="member">
    		SELECT f.*,p.PROFILEIMG as profileimgname FROM FLEAMARKETMEMBER f,PROFILE p
			WHERE f.EMAIL(+) = p.EMAIL
			AND f.email = #{email}
    	</select>
    	
    	<!-- 회원탈퇴 전 이미지삭제 -->
    	<delete id="DeleteProfile" parameterType="string">
    		DELETE PROFILE
    		WHERE EMAIL=#{email}
    	</delete>
    	<!-- 회원탈퇴  -->
    	<delete id="DeleteMember" parameterType="string">
    		DELETE FLEAMARKETMEMBER
    		WHERE EMAIL=#{email}
    	</delete>
    	<!-- 내가 쓴 플리마켓글 -->
    	<select id="FleaMarketList" resultType="FleaMarket" parameterType="String">
		SELECT * FROM FleaMarket 
		WHERE email =#{email}
		</select>
		<!-- 관리자 회원탈퇴용 이메일/프로필이미지 가져오기 -->
		<select id="getMemberProfile" parameterType="string" resultType="profileimg">
			SELECT * FROM PROFILE
			WHERE EMAIL = #{email}
		</select>
		<!-- 고객센터 전체조회 큰틀 검색제외 -->
		<select id="QNAList" resultType="qna" parameterType="string">
			SELECT *
			FROM fleamarketqna
			ORDER BY method ASC, CAST(qnano AS NUMBER) ASC
		</select>
		<!-- 내가 쓴 문의글 조회 -->
		<select id="MemberQNAList" resultType="qna" parameterType="string">
			select * from FLEAMARKETQNA
			WHERE email = #{email}
		</select>
		<!-- 상세조회 -->
		<select id="getQNA" resultType="qna" parameterType="string">
			SELECT * FROM FLEAMARKETQNA
			WHERE qnano = #{qnano}
		</select>
		<!-- 파일명가져오기 -->
		<select id="getQNAFile" resultType="qnafile" parameterType="string">
			SELECT *
			FROM QNAFile
			WHERE qnano = #{qnano}
		</select>
		
    </mapper>
    
    